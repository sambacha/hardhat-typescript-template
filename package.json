{
  "name": "hardhat-typescript-template",
  "version": "1.0.0",
  "description": "hardhat solidity typescript template",
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*",
    "/ethers/**/*",
    "/web3/**/*",
    "/typings/**/*"
  ],
  "directories": {
    "test": "test",
    "contracts": "contracts"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "abigen": "npx abi-types-generator ",
    "format": "npx prettier --config prettier.config.js --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sambacha/hardhat-typescript-template.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "defi",
    "blockchain",
    "smart contracts"
  ],
  "author": "SEE CONTRIBUTORS",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/sambacha/hardhat-typescript-template/issues"
  },
  "homepage": "https://github.com/sambacha/hardhat-typescript-template#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@typechain/ethers-v5": "^6.0.5",
    "@typechain/hardhat": "^1.0.1",
    "@types/node": "^14.14.41",
    "ethereum-abi-types-generator": "^1.1.1",
    "fs-extra": "^7.0.1",
    "hardhat": "^2.2.0",
    "prettier": "2.2.1",
    "prettier-config-solidity": "^1.4.0",
    "prettier-plugin-solidity": "*",
    "solhint": "3.3.4",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4"
  }
}
